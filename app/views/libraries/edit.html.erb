<% content_for(:title, t('.title')) %>
<div class="center">
    <h5 class="text-info p-3"><%= "登録しているエリアは#{@library.name}です" %></h5> 
    <h5 class="text-secondary m-3">現在地を取得すると近郊のエリアが表示されます</h5>
    <h1><%= link_to "現在地を取得する", libraries_path, remote: true, class: 'btn btn-danger btn-lg m-2' %></h1>
    <div id="parent">
        <p class="library"></p>
    </div>

    <h5 class="text-secondary m-3">住所を入力してエリア登録をする</h5>
    <%= form_with url: edit_library_path, local: true, method: :get do |f| %>
        <div class="mb-4">
        <%= f.search_field :address, class: 'form-control', rows: 5, placeholder: 'エリアのキーワードを入力', value: params[:address] %>
        </div>
        <%= f.submit class: 'btn btn-success', id: 'js-address' %>
    <% end %>         
</div>
