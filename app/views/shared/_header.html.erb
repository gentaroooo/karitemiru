<header>
  <nav class="navbar navbar-expand-sm navbar-dark bg-light">
    <div class="container-fluid">
      <%= link_to root_path, class: 'navbar-brand col-3' do %>
        <%= image_tag 'logo.png', size: '200x30' %>
      <% end %>

      <!-- メニュー項目 -->
      <div class="collapse navbar-collapse" id="nav-bar">
        <ul class="navbar-nav ml-auto">

          <li class="nav-item">
            <%= link_to search_books_path do %>
            <div class="text-center m-3">
              <i class="fa-solid fa-magnifying-glass"></i>
              <p class="icon-text">けんさく</p>
            </div>
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to books_path do %>
              <div class="text-center m-3">
                <i class="fa-solid fa-book-open-reader"></i>
                <p class="icon-text">よみたい</p>
              </div>
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to libraries_path do %>
              <div class="text-center m-3">
                <i class="fa-solid fa-building-user"></i>
                <p class="icon-text">図書館</p>
              </div>
            <% end %>
          </li>

        </ul>
      </div>

      <div class="dropdown">
          <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
              　　　<%= image_tag current_user.avatar_url, class: 'rounded-circle', size: '50x50' %>
          </a>
          <div class="dropdown-menu">

              <%= link_to profile_path, class: 'dropdown-item' do %>
                <i class="fa-solid fa-circle-user"></i>編集
              <% end %> 

              <%= link_to logout_path, class: 'dropdown-item', method: :delete do %>
                <i class="fa-solid fa-right-from-bracket"></i>ログアウト
              <% end %> 

          </div>
      </div>
    </div>
  </nav>
</header>
