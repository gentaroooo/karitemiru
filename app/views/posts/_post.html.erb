<div class="col-lg-4 col-md-6 col-sm-12">
  <div class="card mb-3", style="height: 350px; width: 22rem;">
    <div class="row g-0", style="height: 220px">
      <div class="col-5">
      <% if post.image_link.present? %>
        <%= image_tag post.image_link, class: 'img-fluid ms-2 mt-2 border post-img' %>
      <% end %>
      </div>
      <div class="col-7">
        <div class="card-body">
          <h5 class="card-title"><%= post.title.truncate(30) %></h5>
          <%
=begin%>
 <p class="card-text mb-2"><%= post.authors.pluck(:name).join(', ')&.truncate(20) %></p> 
<%
=end%>
          <p class="card-text"><small class="text-muted"><%= post.published_date %></small></p>
        </div>
      </div>
    </div>
    <div class="d-flex border-top pt-2">
      <div>
        <%= image_tag post.user.avatar.url, class: 'rounded-circle mt-1 ms-2 me-3', size: '40x40' %>
      </div>
      <div>
        <p class="fs-7 mb-1"><%= post.user.name %></p>
      </div>
    </div>
    <p class="card-text mx-3"><%= post.body.truncate(30) %></p>
    <%
=begin%>
 <%= link_to '', post_path(post), class: 'card-link' %> 
<%
=end%>
  </div>
</div>