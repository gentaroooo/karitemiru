<div class="col row-cols-1 row-cols-md-2 p-2">
  <div class="card mx-auto">
    <div class="row g-0">
      <div class="col-5">
        <%= image_tag @post.image_link.blank? ? 'sample.jpeg' : @post.image_link, class: 'img-fluid border m-4' %>
      </div>
  
      <div class="col-7">
        <div class="card-body">
          <h5 class="card-title"><%= @post.title %></h5>
          <p class="card-text mb-2"><%= @post.authors.pluck(:name).join(', ')&.truncate(50) %></p>
          <p class="card-text"><small class="text-muted"><%= @post.published_date %></small></p>
          <h5><%= link_to 'Googleで見る', @post.info_link, class: "badge bg-light" %></h5>
        </div>
      </div>
    </div>
  </div>
      
  <article class="card">
    <div class="card-body">
      <div class='row'>
        <div class='col-md-9'>
          <% if current_user.own?(@post) %>
            <%= render 'crud_menus', post: @post %>
          <% else %>
            <%= render 'like_button', post: @post  %>
          <% end %>
            <%= link_to image_tag(@post.user.avatar.url, class:"rounded-circle m-2 user-image", size: '60x60'), user_path(@post.user) %>
            <%= link_to @post.user.name, user_path(@post.user) %>
            <p class="card-text mb-2">投稿日：<%= l @post.created_at, format: :long  %></p>
            <p class="card-text mb-2"><%= simple_format(@post.body) %></p>
          </ul>
        </div>

        <div class="d-flex">
          <div>
            <% @post.categories.each do |category| %>
              <div class="badge bg-info text-white"><%= category.name %></div> 
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </article>
  <p>
  <!-- コメントフォーム -->
  <%= render 'comments/form', { post: @post, comment: @comment } %> 
  <!-- コメントエリア -->
  <%= render 'comments/comments', { comments: @comments } %> 
  </p>
</div>