<% if logged_in? %>
  <div class="text-center top-text p-1">レビュー</div>
    <div class="container">
      <div class="row row-cols-1 row-cols-md-2">
        <% if @posts.present? %>
          <%= render @posts %>
        <% else %>
          <p><%= t('.no_result') %></p>
        <% end %>
      </div>
      <%= paginate @posts %> 
    </div>
  </div>
<% else %>
<div class="top-wrapper">
  <div class="top-inner-text text-white">
    <h3>次は何をかりますか？</h3>
    <h5>近くの図書館にある本を探せます</h5>
  </div>
</div>
<div class="text-center top-text p-1">最近の投稿</div>
  <div class="container">
    <div class="row row-cols-1 row-cols-md-2">
      <% if @posts.present? %>
        <%= render @posts %>
      <% else %>
        <p><%= t('.no_result') %></p>
      <% end %>
    </div>
    <%= paginate @posts %> 
  </div>
</div>

<% end %>
