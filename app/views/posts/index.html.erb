<div class="container">
   <%
=begin%>
 <div class="row">
     <div class="col-lg-10 offset-lg-1">
       <!-- 検索フォーム -->
       <form>
         <div class="input-group mb-3">
           <input class="form-control" placeholder="検索ワード" type="search" />
           <div class="input-group-append">
             <input type="submit" value="検索" class="btn btn-primary" />
           </div>
         </div>
       </form>
     </div>
   </div> 
<%
=end%>
  <%
=begin%>
 <%= form_tag posts_path, method: :get, class: 'boards__searchForm' do %>
      <%= select_tag :category_id,
                     options_from_collection_for_select(Category.all, :id, :name, params[:category_id]),
                     {
                       prompt: 'タグで絞り込み検索',
                       onchange: 'submit(this.form);'
                     }
      %>
    <% end %> 
<%
=end%>

 
   <!-- 掲示板一覧 -->
   <p><div class="row row-cols-1 row-cols-md-2"></p>
      <% if @posts.present? %>
        <%= render @posts %>
      <% else %>
        <p><%= t('.no_result') %></p>
      <% end %>
    </div>
     <%= paginate @posts %> 
   </div>
 </div>