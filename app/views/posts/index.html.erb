<% if logged_in? %>
<div class="text-center top-text p-1">レビュー</div>
  <div class="container">
   <div class="row row-cols-1 row-cols-md-2">
      <% if @posts.present? %>
        <%= render @posts %>
      <% else %>
        <p><%= t('.no_result') %></p>
      <% end %>
    </div>
     <%= paginate @posts %> 
   </div>
 </div>
<% else %>
  <div class="top-wrapper">
  <div class="top-inner-text">
    <h1>かりてよむ</h1>
  </div>
</div>
<% end %>
