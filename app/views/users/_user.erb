<div class="col row-cols-1 row-cols-md-2 p-2">
  <div class="card mx-auto" style="width: 18rem; height: 16rem">
    <div class="card-body">
      <h4 class="card-title fw-bold"><%= link_to user.name, user_path(user) %></h4>
      <td><%= image_tag user.avatar.url, class: 'rounded-circle', size: '100x100' %></td>
      <p><%= render 'relationships/follow_button', user: user %></P>
      <% if user.introduction.present? %>
        <p class="card-text"><%= simple_format(user.introduction.truncate(30)) %></p>
      <% else %>
      <% end %>
    </div>
  </div>
</div>
