<div class="col">
  <div class="card h-100">
    <div class="card-body">
      <h4 class="card-title fw-bold">
        <%= link_to user.name, user_path(user), class: 'card-link' %>
      </h4>
      <td><%= image_tag user.avatar.url, class: 'rounded-circle', size: '100x100' %></td>
      <p><%= render 'relationships/follow_button', user: user %></P> 
      <p class="card-text"><%= simple_format(user.introduction) %></p>
    </div>
  </div>
</div>