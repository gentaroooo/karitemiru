<div class="container">
  <div class="text-center top-text p-1"><%= @user.name %> さんのレビュー</div>
    <div class="row row-cols-1 row-cols-md-2">
      <% @posts.each do |post| %>
        <%= render 'posts/post', { post: post } %>
      <% end %>
    </div>
    <div class="mx-auto">
      <%= paginate @posts %>
    </div>
</div>