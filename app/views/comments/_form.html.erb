<%= form_with model: [post, comment], id: 'new-comment', local: false do |f|  %>
  <%= f.label :body, 'コメントを残す', class: 'form-label fw-bolder' %>
  <%= f.text_area :body, placeholder: 'コメントを追加…', class: 'form-control mb-3', id: 'new-comment-body' %>
  <%= f.submit t('defaults.post'), class: 'btn btn-primary' %>
<% end %>
