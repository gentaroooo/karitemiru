  <div class="col row-cols-1 row-cols-md-2 p-2">
    <div class="card mx-auto" style="width: 18rem; height: 14rem">
      <%= image_tag book.image_link.present? ? book.image_link : 'sample.jpg', class: 'card-img-top book-img' %>
      <div class="card-body">
        <h6 class="card-title"><%= book.title.truncate(30) %></h6>
      </div>
      <%= link_to '', book_path(book), class: 'card-link' %>
    </div>
  </div>